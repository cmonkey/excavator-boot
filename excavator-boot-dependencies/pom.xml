<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>org.excavator.boot</groupId>
	<artifactId>excavator-boot-dependencies</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>Excavator boot Dependencies</name>
	<description>Excavator Boot Dependencies project for Spring Boot</description>

	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>1.5.17.RELEASE</version>
		<relativePath/> <!-- lookup parent from repository -->
	</parent>

	<properties>
		<java.version>1.8</java.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<project.encoding>UTF-8</project.encoding>
		<project.build.encoding>UTF-8</project.build.encoding>

		<spring-cloud.version>Edgware.SR5</spring-cloud.version>

        <excavator.boot.version>1.0.0-SNAPSHOT</excavator.boot.version>

		<!-- 3rd lib dependency -->
		<fastjson.version>1.2.47</fastjson.version>
		<curator.version>2.11.1</curator.version>
		<joda.time.version>2.9.9</joda.time.version>
        <scala.major-version>2.12</scala.major-version>
        <scala.version>${scala.major-version}.7</scala.version>
		<pagehelper.version>1.2.7</pagehelper.version>
		<mybatis.version>1.3.2</mybatis.version>
		<dom4j.version>2.1.1</dom4j.version>
		<excavatorp-boot.version>1.0.0-SNAPSHOT</excavatorp-boot.version>
		<saga.version>0.2.0-SNAPSHOT</saga.version>
		<mysql-connector.version>8.0.11</mysql-connector.version>
		<commons-lang3.version>3.8</commons-lang3.version>
		<lombok.version>1.16.22</lombok.version>
		<druid.version>1.1.11</druid.version>
		<javax-servlet.version>3.1.0</javax-servlet.version>
		<redisson.version>3.6.4</redisson.version>
		<commons-codec.version>1.11</commons-codec.version>
		<netty.version>4.1.29.Final</netty.version>
		<junit-jupiter.version>5.3.2</junit-jupiter.version>
        <commons-logging.version>1.2</commons-logging.version>
		<guava.version>19.0</guava.version>
		<commons-text.version>1.4</commons-text.version>
        <jmh.version>1.21</jmh.version>

		<main.user.dir>${user.dir}</main.user.dir>

        <!-- plugin -->
        <license.maven.plugin>3.0</license.maven.plugin>
		<maven.java.formatter.plugin>0.4</maven.java.formatter.plugin>
		<maven.compiler.plugin>3.1</maven.compiler.plugin>
		<maven.source.plugin>3.0.0</maven.source.plugin>
		<maven.javadoc.plugin>2.9.1</maven.javadoc.plugin>
		<maven.staging.plugin>1.6.7</maven.staging.plugin>
		<maven.gpg.pluign>1.5</maven.gpg.pluign>
		<cobertura.maven.plugin>2.6</cobertura.maven.plugin>
		<coveralls.maven.plugin>3.1.0</coveralls.maven.plugin>
		<alchim31.scala.plugin>3.4.4</alchim31.scala.plugin>
		<maven.surefire.plugin>2.22.1</maven.surefire.plugin>

	</properties>

	<licenses>
		<license>
			<name>The Apache License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
		</license>
	</licenses>

	<developers>
		<developer>
			<name>cmonkey</name>
			<email>42.codemonkey@gmail.com</email>
			<organization>Excavator</organization>
			<organizationUrl>https://cmonkey.github.io</organizationUrl>
		</developer>
	</developers>

	<scm>
		<!-- http://maven.apache.org/scm/git.html -->
		<connection>scm:git:git://github.com:cmonkey/excavator-boot.git</connection>
		<developerConnection>scm:git:ssh://github.com:cmonkey/excavator-boot.git</developerConnection>
		<url>https://github.com/cmonkey/excavator-boot/tree/master</url>
	</scm>
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.alibaba</groupId>
				<artifactId>fastjson</artifactId>
				<version>${fastjson.version}</version>
			</dependency>
			<!--pagehelper-->
			<dependency>
				<groupId>com.github.pagehelper</groupId>
