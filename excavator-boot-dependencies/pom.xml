                <version>${jmh.version}</version>
            </dependency>
			<!-- excavator boot start -->
            <dependency>
				<groupId>org.excavator.boot</groupId>
				<artifactId>base</artifactId>
				<version>${excavator.boot.version}</version>
			</dependency>
			<dependency>
				<groupId>org.excavator.boot</groupId>
				<artifactId>common</artifactId>
